{
  "name": "rift-autonomous-healer",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "backend/gateway",
    "packages/contracts"
  ],
  "scripts": {
    "build": "npm run build -w @rift/contracts && npm run build -w @rift/gateway",
    "typecheck": "npm run typecheck -w @rift/contracts && npm run typecheck -w @rift/gateway",
